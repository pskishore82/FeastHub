<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigation"
        />

    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mbn_circleColor="@color/orange"
        app:mbn_backgroundBottomColor="@color/white"
        app:mbn_countBackgroundColor="@color/black"
        app:mbn_countTextColor="@color/black"
        app:mbn_defaultIconColor="#90a4ae"
        app:mbn_rippleColor="@color/orange"
        app:mbn_selectedIconColor="#3c415e"
        app:mbn_shadowColor="@color/orange_shade1"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>