<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="psk.example.feasthub.Register">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/registerbg"
        android:scaleType="centerCrop"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.5"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lable"
        android:text="SIGN UP"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:textSize="42sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/backicon"
        android:src="@drawable/backicon"
        android:paddingLeft="20dp"
        android:layout_marginTop="10dp"/>




    <EditText
        android:id="@+id/regusername"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/lable"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textColor="@color/black"
        android:singleLine="true"
        android:background="@drawable/ovaltext"
        android:drawableStart="@drawable/usernameicon"
        android:drawablePadding="10dp"
        android:hint="Username"
        android:padding="15dp"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/regphone"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/regusername"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/ovaltext"
        android:drawableStart="@drawable/phone"
        android:drawablePadding="10dp"
        android:hint="Mobile Number"
        android:inputType="phone"
        android:padding="15dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/regemail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regphone"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/ovaltext"
        android:drawableStart="@drawable/email"
        android:drawablePadding="10dp"
        android:hint="Enter Email Id"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/regpass"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/regemail"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/ovaltext"
        android:drawableStart="@drawable/password"
        android:drawablePadding="10dp"
        android:hint="Create Password"
        android:inputType="textPassword"
        android:padding="15dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/regconfpass"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regpass"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/ovaltext"
        android:drawableStart="@drawable/password"
        android:drawablePadding="10dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="15dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chkbox"
        android:layout_below="@id/regconfpass"
        android:layout_centerHorizontal="true"
        android:text="Show password"
        android:layout_marginTop="10dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SignUpbtn"
        android:layout_below="@id/regconfpass"
        android:background="@drawable/round_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Sign Up"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:textSize="20sp"
            android:textColor="@color/white"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alreadytxt"
        android:layout_below="@id/SignUpbtn"
        android:text="Already a User? Log In"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"/>






</RelativeLayout>